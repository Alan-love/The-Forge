#include "Resources.h.fsl"
#include "Global.srt.h"



STRUCT(VSInput)
{
	DATA(float4, Position, POSITION);
};

STRUCT(VSOutput)
{
	DATA(float4, Position, SV_Position);
	DATA(float3, pos,    POSITION);
};

ROOT_SIGNATURE(DefaultRootSignature)
VSOutput VS_MAIN( VSInput In )
{
    INIT_MAIN;
    VSOutput Out;
#if FT_MULTIVIEW
	Out.Position = mul(gUniformBlock.projView[VR_VIEW_ID], In.Position);
#else
	Out.Position = mul(gUniformBlock.projView, In.Position);
#endif
	Out.pos = In.Position.xyz;
    RETURN(Out);
}
